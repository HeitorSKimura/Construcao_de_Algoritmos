        "#Exercício N°- 3. Faça um programa que receba três notas e seus respectivos pesos, calcule e mostre a média ponderada dessas notas.\n",
        "\n",
        "nota1 = float(input(\"Informe a 1º Nota: \"))\n",
        "nota2 = float(input(\"Informe a 2° Nota: \"))\n",
        "nota3 = float(input(\"Informe a 3° Nota: \"))\n",
        "\n",
        "peso1 = float(input(\"Informe o 1° Peso: \"))\n",
        "peso2 = float(input(\"Informe o 2° Peso: \"))\n",
        "peso3 = float(input(\"Informe o 3° Peso: \"))\n",
        "\n",
        "mediafinal = ((nota1 * peso1) + (nota2 * peso2) + (nota3 * peso3)) / (peso1 + peso2 + peso3)\n",
        "\n",
        "if mediafinal >= 7:\n",
        "  print(\"Aprovado\")\n",
        "else:\n",
        "  print(\"REPROVADO\")"
